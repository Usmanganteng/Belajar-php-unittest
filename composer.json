{
    "name": "aldizarilham/belajar-php-unit-test",
    "description": "Belajar PHP Unit test",
    "type": "project",
    "authors": [
        {
            "name": "lucian666",
            "email": "ilhamaldizar@gmail.com"
        }
    ],
    "require": {
        "php" : ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "9.5.5"
    },
    "autoload": {
        "psr-4": {
            "Aldizarilham\\BelajarPhpUnitTest\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aldizarilham\\BelajarPhpUnitTest\\": "tests"
        }
    },
    "scripts": {
        "test" : "phpunit --configuration phpunit.xml",
        "test:product" : "phpunit --configuration phpunit.xml --testsuite product",
        "test:counter" : "phpunit --configuration phpunit.xml --testsuite counter"
      }

}
